{
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es6", "es7"],
    "outDir": "lib",
    "module": "commonjs",
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
